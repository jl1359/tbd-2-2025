        </div>

        <div className="text-right">
          <p className="text-sm text-emerald-100/80">
            Cr√©ditos:{" "}
            <span className="font-semibold text-emerald-300">
              {creditosTx}
            </span>
          </p>
          {contraparte && (
            <p className="text-xs text-emerald-100/70 mt-1">
              Con: {contraparte}
            </p>
          )}
        </div>
      </div>
    );
  }

  return (
