export function buildUploadUrl(url) {
  if (!url) return "";

  if (/^https?:\/\//i.test(url)) return url;

  if (url.startsWith("/")) {
    return `${API_BASE_URL}${url}`;
  }

  return `${API_BASE_URL}/${url}`;
}
