import { prisma } from "../../config/prisma.js";

const ESTADOS = [
  "PROGRAMADA",
  "ACTIVA",
  "PAUSADA",
  "FINALIZADA",
  "CANCELADA",
  "ELIMINADA",
];

/**
 * Lista de publicidad ACTIVA (para mostrar en el sistema)
 */
export const listarPublicidadActivaService = () =>
  prisma.$queryRaw`
    SELECT 
      p.*,
      u.nombre AS usuario,
      up.nombre AS nombre_ubicacion
    FROM PUBLICIDAD p
    JOIN USUARIO u ON u.id_usuario = p.id_usuario
    LEFT JOIN UBICACION_PUBLICIDAD up 
      ON up.id_ubicacion = p.id_ubicacion
    WHERE p.estado = 'ACTIVA'
      AND NOW() BETWEEN p.fecha_inicio AND p.fecha_fin
    ORDER BY p.fecha_inicio DESC, p.id_publicidad DESC
  `;

/**
 * Listado completo (admin)
 */
export const listarPublicidadAdminService = () =>
  prisma.$queryRaw`
    SELECT 
      p.*,
      u.nombre AS usuario,
      up.nombre AS nombre_ubicacion
    FROM PUBLICIDAD p
    JOIN USUARIO u ON u.id_usuario = p.id_usuario
    LEFT JOIN UBICACION_PUBLICIDAD up 
      ON up.id_ubicacion = p.id_ubicacion
    ORDER BY p.fecha_inicio DESC, p.id_publicidad DESC
  `;

/**
 * Crear nueva campa√±a de publicidad.
 * Siempre se crea como PROGRAMADA (sin cobrar todav√≠a).
 */
export const crearPublicidadService = async (idUsuario, body) => {
  const {
    id_ubicacion,
    titulo,
    descripcion,
    url_destino,
    fecha_inicio,
    fecha_fin,
    costo_creditos,
  } = body;

  if (
    !id_ubicacion ||
    !titulo ||
    !fecha_inicio ||
    !fecha_fin ||
    !costo_creditos
  ) {
    const err = new Error("Faltan datos obligatorios de publicidad");
    err.status = 400;
    throw err;
  }

  await prisma.$queryRaw`
    INSERT INTO PUBLICIDAD (
      id_usuario,
      id_ubicacion,
      estado,
      titulo,
      descripcion,
      url_destino,
      fecha_inicio,
      fecha_fin,
      costo_creditos
    )
    VALUES (
      ${idUsuario},
      ${id_ubicacion},
      'PROGRAMADA',
      ${titulo},
      ${descripcion || null},
      ${url_destino || null},
      ${fecha_inicio},
      ${fecha_fin},
      ${costo_creditos}
    )
  `;

  const [row] = await prisma.$queryRaw`
    SELECT *
    FROM PUBLICIDAD
    WHERE id_publicidad = LAST_INSERT_ID()
    LIMIT 1
  `;

  return row;
};

/* =====================================================
   CAMBIAR ESTADO (ADMIN)
   - Si pasa a ACTIVA: cobra cr√©ditos al due√±o
===================================================== */
export const cambiarEstadoPublicidadService = async (idPublicidad, estado) => {
  if (!ESTADOS.includes(estado)) {
    const err = new Error(`Estado inv√°lido. Permitidos: ${ESTADOS.join(", ")}`);
    err.status = 400;
    throw err;
  }

  // Traemos info actual de la campa√±a
  const [pub] = await prisma.$queryRaw`
    SELECT id_usuario, estado, costo_creditos
    FROM PUBLICIDAD
    WHERE id_publicidad = ${idPublicidad}
    LIMIT 1
  `;

  if (!pub) {
    const err = new Error("Publicidad no encontrada");
    err.status = 404;
    throw err;
  }

  // Si el admin quiere ACTIVAR la campa√±a
  if (estado === "ACTIVA") {
    if (pub.estado === "ACTIVA") {
      const err = new Error("La publicidad ya est√° activa");
      err.status = 400;
      throw err;
    }

    const idUsuarioDueno = pub.id_usuario;
    const costo = pub.costo_creditos;

    // Insertamos un MOVIMIENTO_CREDITOS NEGATIVO
    // - Tipo movimiento: AJUSTE_ADMIN_NEGATIVO (ya existe y es NEGATIVO)
    // - Tipo referencia: PUBLICIDAD
    // El trigger trg_movcred_before_ins:
    //   * Verifica saldo
    //   * Calcula saldo_anterior / saldo_posterior
    //   * Lanza error si no alcanza
    await prisma.$queryRaw`
      INSERT INTO MOVIMIENTO_CREDITOS
        (id_usuario, id_tipo_movimiento, id_tipo_referencia,
         cantidad, descripcion, saldo_anterior, saldo_posterior, id_referencia)
      VALUES
        (
          ${idUsuarioDueno},
          fn_get_tipo_mov('AJUSTE_ADMIN_NEGATIVO'),
          (SELECT id_tipo_referencia 
             FROM TIPO_REFERENCIA 
            WHERE nombre = 'PUBLICIDAD'
            LIMIT 1),
          ${costo},
          CONCAT('Costo de campa√±a de publicidad #', ${idPublicidad}),
          0,
          0,
          ${idPublicidad}
        )
    `;
    // Si aqu√≠ falla por saldo insuficiente, NO se actualiza el estado
  }

  // Actualizar al estado solicitado
  await prisma.$queryRaw`
    UPDATE PUBLICIDAD
    SET estado = ${estado}
    WHERE id_publicidad = ${idPublicidad}
  `;

  const [row] = await prisma.$queryRaw`
    SELECT *
    FROM PUBLICIDAD
    WHERE id_publicidad = ${idPublicidad}
    LIMIT 1
  `;

  return row;
};

/* =====================================================
   ELIMINAR (L√ìGICO)
===================================================== */
export const eliminarPublicidadService = async (idPublicidad) => {
  // La tratamos como un cambio de estado a ELIMINADA
  return cambiarEstadoPublicidadService(idPublicidad, "ELIMINADA");
};
