  const metrics = useMemo(() => {
    if (!datos.length) {
      return {
        totalCo2: 0,
        totalAgua: 0,
        totalEnergia: 0,
        totalTransacciones: 0,
        usuarios: 0,
        topUsuario: null,
      };
    }

    const totalCo2 = datos.reduce(
      (acc, r) => acc + Number(r.co2_total || 0),
