      (best, r) => {
        const impacto =
          Number(r.co2_total || 0) +
          Number(r.agua_total || 0) +
          Number(r.energia_total || 0);
        const bestImpacto =
          Number(best?.co2_total || 0) +
          Number(best?.agua_total || 0) +
          Number(best?.energia_total || 0);
        return impacto > bestImpacto ? r : best;
      },
      null
    );

    return {
      totalCo2,
      totalAgua,
      totalEnergia,
      totalTransacciones,
      usuarios,
      topUsuario,
